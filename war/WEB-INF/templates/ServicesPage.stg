/**
 * Simple example
 */
servicesPage(info) ::= <%
	Example 7:
	<html>
	  <body>
	    <h1>$info.firstName$ $info.lastName$</h1>
	    <ul>
	        $info.handle$ $bold(info.handle)$
	    </ul>
	  </body>
	</html>
%>

/**
 * wraps the text in a <span> with a style of bold
 */
bold(value) ::= <%
	<span style="font-weight: bold;">$value$</span>
%>